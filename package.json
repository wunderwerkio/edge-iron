{
  "name": "@antaja/edge-iron",
  "version": "1.0.0",
  "description": "Edge-Runtime compatible port of @hapi/iron and fork from @wunderwerk/edge-iron",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ]
  },
  "scripts": {
    "check-all": "turbo run build typecheck test",
    "build": "tsup ./src/index.ts --format esm --dts",
    "test": "NODE_NO_WARNINGS=1 ava",
    "typecheck": "tsc --project ./tsconfig.json",
    "version-package": "turbo run build test typecheck && changeset version && pnpm install --lockfile-only",
    "publish-package": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@swc/core": "^1.3.72",
    "@types/node": "^20.4.5",
    "ava": "^5.3.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@hapi/bourne": "^3.0.0"

  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ]
}
